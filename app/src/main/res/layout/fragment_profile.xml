<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="プロフィール表示画面"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/header_profile"
            android:textSize="30sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="259dp"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="241dp"
                app:srcCompat="@drawable/user_sample_osanai"
                android:id="@+id/imageView3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.73" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="188dp"
                android:layout_height="244dp"
                android:weightSum="1"
                android:layout_weight="0.08">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="New"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textSize="30sp"
                        android:fontFamily="serif"
                        android:typeface="serif"
                        android:textColor="@android:color/holo_red_light"
                        android:textStyle="normal|bold|italic" />

                    <TextView
                        android:text="Contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textSize="24sp" />
                </LinearLayout>

                <TextView
                    android:text="長内一真"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="36sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="textStart"
                    android:paddingTop="20dp"
                    android:paddingBottom="30dp"/>

                <TextView
                    android:layout_width="209dp"
                    android:layout_height="60dp"
                    android:id="@+id/textView4"
                    android:text="5㌔くらい痩せた\nもっと痩せたい"
                    android:textAlignment="center"
                    android:textSize="24sp"/>
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                    <TextView
                        android:text="基本情報"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:background="@android:color/transparent"
                        android:breakStrategy="balanced"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp">

                        <TextView
                            android:text="性別"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:textSize="20sp"/>

                        <TextView
                            android:text="男"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14"
                            android:textSize="24sp"/>
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp">

                        <TextView
                            android:text="年齢"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView17"
                            android:textSize="20sp"/>

                        <TextView
                            android:text="22歳"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView16"
                            android:layout_weight="1"
                            android:textSize="24sp"/>
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp">

                        <TextView
                            android:text="誕生日"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView19"
                            android:textSize="20sp" />

                        <TextView
                            android:text="12月12日"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView18"
                            android:layout_weight="1"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp">

                        <TextView
                            android:text="国籍"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView23"
                            android:textSize="20sp" />

                        <TextView
                            android:text="日本"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView20"
                            android:layout_weight="1"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="出身"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView25"
                            android:textSize="20sp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:paddingLeft="20dp"/>

                        <TextView
                            android:text="青森県"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView24"
                            android:layout_weight="1"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp">

                        <TextView
                            android:text="職業"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView27"
                            android:textSize="20sp" />

                        <TextView
                            android:text="大学生"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView26"
                            android:layout_weight="1"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:text="趣味や好きなこと"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView28"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp">

                        <TextView
                            android:text="音楽"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView30"
                            android:textSize="20sp" />

                        <TextView
                            android:text="Spitz, aiko, back number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView29"
                            android:layout_weight="1"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp">

                        <TextView
                            android:text="スポーツ"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView32"
                            android:textSize="20sp" />

                        <TextView
                            android:text="野球, サッカー, バスケ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView31"
                            android:layout_weight="1"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp">

                        <TextView
                            android:text="映画"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView34"
                            android:textSize="20sp" />

                        <TextView
                            android:text="Back To The Future, Star Wars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView33"
                            android:layout_weight="1"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
